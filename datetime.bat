IF %time:~0,2% lss 10 SET ZEIT2=0%time:~1,1%%time:~3,2%%time:~6,2%
SET TSTAMP2=%DATUM2%_%ZEIT2%


SET JAHR_AKTUELL=%date:~-4%
SET MONAT_AKTUELL=%date:~3,2%
SET JAHR_MONAT_AKTUELL=%JAHR_AKTUELL%_%MONAT_AKTUELL%


