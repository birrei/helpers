@echo off 

SET DATUM=%date:~-4%-%date:~3,2%-%date:~0,2%
SET ZEIT=%time:~0,2%-%time:~3,2%-%time:~6,2%
IF %time:~0,2% lss 10 SET ZEIT=0%time:~1,1%-%time:~3,2%-%time:~6,2%
